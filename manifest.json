{
  "manifest_version": 3,
  "name": "External resources monitor",
  "description": "Monitors external resources loaded by web pages and alerts on potential supply chain attacks.",
  "version": "1.0.2",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs", 
    "webRequest"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
